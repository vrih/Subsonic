<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:title="@string/settings.title">

	<Preference
		android:title="@string/settings.servers_title"
		android:icon="@drawable/element_server"
		android:key="servers"
		app:fragment="github.vrih.xsub.fragments.ServerSettingsFragment">
	</Preference>

	<Preference
		android:title="@string/settings.appearance_title"
		android:icon="@drawable/element_appearance"
		android:key="appearance"
		app:fragment="github.vrih.xsub.fragments.AppearanceSettingsFragment">
	</Preference>

	<Preference
		android:title="@string/settings.drawer_items_title"
		android:icon="@drawable/element_menu"
		android:key="drawer"
		app:fragment="github.vrih.xsub.fragments.DrawerSettingsFragment">
	</Preference>

	<Preference
		android:title="@string/settings.cache_screen_title"
		android:icon="@drawable/element_network"
		android:key="cache"
		app:fragment="github.vrih.xsub.fragments.CacheSettingsFragment">
	</Preference>

	<Preference
		android:title="@string/settings.sync_title"
		android:icon="@drawable/element_refresh"
		android:key="sync"
		app:fragment="github.vrih.xsub.fragments.SyncSettingsFragment">
	</Preference>

	<Preference
		android:title="@string/settings.playback_title"
		android:icon="@drawable/element_start"
		android:key="playback"
		app:fragment="github.vrih.xsub.fragments.PlaybackSettingsFragment">
	</Preference>

	<Preference
		android:title="@string/settings.casting"
		android:icon="@drawable/element_cast"
		android:key="cast"
		app:fragment="github.vrih.xsub.fragments.CastSettingsFragment">
	</Preference>
</androidx.preference.PreferenceScreen>
